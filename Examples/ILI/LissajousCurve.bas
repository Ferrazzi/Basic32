10  REM ===== STATIC LISSAJOUS 320X240 (SINGLE TRACE) =====
20  ILI INIT 17 16 5 3
30  ILI LED 32 1
40  ILI SETBGCOLOR 0 0 0
50  ILI CLEAR
60  W = 320 : H = 240
61  W1 = W - 1 : H1 = H - 1
80  CX = W / 2
90  CY = H / 2
100  SCALE = 100
110  REM RELATIVE X AND Y FREQUENCIES
120  AX = 3
130  AY = 4
140  PHIDEG = 0 REM PHASE IN DEGREES
150  GOSUB 1000 REM DRAW GRID
160  GOSUB 2000 REM DRAW CURVE ONCE
170  ILI DRAW
180  END
1000  REM =========================
1010  REM DRAW GRID
1020  REM =========================
1030  ILI RECT 0 0 W1 H1 0 150 255
1040  GY = 0
1050  IF GY > H1 THEN GOTO 1120
1060  ILI LINE 0 GY W1 GY 40 40 80
1070  GY = GY + 20
1080  GOTO 1050
1120  GX = 0
1130  IF GX > W1 THEN GOTO 1200
1140  ILI LINE GX 0 GX H1 40 40 80
1150  GX = GX + 20
1160  GOTO 1130
1200  RETURN
2000  REM =========================
2010  REM LISSAJOUS CURVE
2020  REM =========================
2030  FIRST = 1
2040  FOR J = 0 TO 628 REM 0..6.28 RAD STEP 0.01 (STORED AS J/100)
2050  T = J / 100
2055  TD = T * 57.2958 REM RADIANS -> DEGREES
2060  X = CX + INT(SCALE * SIN(AX * TD))
2070  Y = CY + INT(SCALE * SIN(AY * TD + PHIDEG))
2080  IF FIRST = 0 THEN ILI LINE XP YP X Y 0 255 0
2090  XP = X
2100  YP = Y
2110  FIRST = 0
2120  NEXT J
2130  RETURN
